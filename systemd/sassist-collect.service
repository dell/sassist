[Unit]
Description=Dell SupportAssist Collector
Documentation=http://www.dell.com/en-us/work/learn/supportassist
Documentation=man:sosreport

ConditionFileIsExecutable=/usr/sbin/ipmi-raw
ConditionFileIsExecutable=/usr/sbin/sosreport
ConditionPathExistsGlob=/dev/ipmi*
ConditionPathIsMountPoint=/media/iDRAC_NATOSC

RequiresMountsFor=/media/iDRAC_NATOSC
RefuseManualStart=true

[Service]
Type=oneshot
Environment=MEDIA_DIR=/media/iDRAC_NATOSC
ExecStart=/usr/libexec/sassist.sh start
